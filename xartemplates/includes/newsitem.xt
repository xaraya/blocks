<?xml version="1.0" encoding="utf-8"?>
<xar:template xmlns:xar="http://xaraya.com/2004/blocklayout">
    <xar:if condition="$item['itemtype'] eq 1">
        <!-- Title -->
        <a href="#xarModURL('publications','user','display',array('itemid'=>$item['id']))#">#xarVarPrepForDisplay($item['title'])#</a>
    <xar:else/>
        No news available
    </xar:if>
</xar:template>